<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProyectoEC03" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/colorSecondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.ProyectoEC03.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.ProyectoEC03.TextInputLayout.HintText</item>
        <item name="hintTextColor">@color/colorTextSecondary</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/textInputOutlineColor</item>
        <item name="boxCornerRadiusTopStart">20dp</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>
        <item name="boxCornerRadiusBottomStart">20dp</item>
        <item name="boxCornerRadiusBottomEnd">20dp</item>
    </style>

    <style name="TextAppearance.ProyectoEC03.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.ProyectoEC03.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:radius">60dp</item>
        <item name="android:color">@color/colorPrimaryDark</item>
        <item name="backgroundColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TextAppearance.ProyectoEC03.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <!--TOOL BAR-->
    <style name="Widget.ProyectoEC03.Toolbar"  parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>
</resources>