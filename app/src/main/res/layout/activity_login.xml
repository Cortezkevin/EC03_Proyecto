<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_fondo"
    tools:context=".LoginActivity"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/shlop_rg"
        android:text="@string/app_name"
        android:textColor="@color/colorLoginText"
        android:textSize="90dp" />
    <com.google.android.material.textfield.TextInputLayout
        app:boxBackgroundColor="@color/colorInputLogin"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginTop="265dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:hint="Username"
        app:hintTextColor="@color/teal_200"
        app:errorEnabled="true"
        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/profile_user_32"
        android:textColorHint="@color/white"
        app:startIconTint="@color/white"
        app:endIconTint="@color/white"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        android:id="@+id/text_layout_username">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/text_edit_username"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20dp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxBackgroundColor="@color/colorInputLogin"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:hint="Password"
        app:endIconMode="password_toggle"
        app:startIconDrawable="@drawable/padlock"
        android:id="@+id/text_layout_password"
        android:textColorHint="@color/white"
        app:startIconTint="@color/white"
        app:endIconTint="@color/white"
        app:errorEnabled="true"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/text_edit_password"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.button.MaterialButton
        android:layout_width="270dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:text="Login"
        app:cornerRadius="15dp"
        android:id="@+id/login"
        android:textAllCaps="false"
        android:backgroundTint="@color/colorButtonLogin"
        android:textSize="25dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/shlop_rg"
        android:text="The Rick and Morty App"
        android:textColor="@color/colorLoginText"
        android:textSize="30dp" />

</LinearLayout>